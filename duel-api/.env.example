# Configuration de l'API Duel by Benribs Lab

# Port du serveur
PORT=3003

# Environnement (development, production, test)
NODE_ENV=development

# ===== CONFIGURATION BASE DE DONNÉES =====

# Base de données SQLite (par défaut)
SQLITE_URL="file:./prisma/dev.db"
DATABASE_URL="file:./prisma/dev.db"

# Configuration de base de données dynamique
# DB_PROVIDER: sqlite ou mysql
DB_PROVIDER=sqlite

# Configuration MySQL (pour migration automatique)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=duel
DB_USER=votre_utilisateur_mysql
DB_PASS=votre_mot_de_passe_mysql

# ===== AUTHENTIFICATION =====

# Secret pour JWT (OBLIGATOIRE - changez en production !)
JWT_SECRET=votre_secret_jwt_super_securise_changez_moi_en_production

# Administration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changez_moi_en_production

# ===== SÉCURITÉ ET CORS =====

# CORS - Domaines autorisés (séparés par des virgules)
ALLOWED_ORIGINS=http://localhost:3003,http://localhost:5173,https://votre-site-escrime.com

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Sécurité API
API_KEY_HEADER=X-API-Key
API_KEY=votre_cle_api_changez_moi_aussi

# ===== EMAILS ET NOTIFICATIONS =====

# Microsoft Graph pour l'envoi d'emails
AZURE_CLIENT_ID=votre_client_id_azure
AZURE_CLIENT_SECRET=votre_client_secret_azure
AZURE_TENANT_ID=votre_tenant_id_azure
GRAPH_SENDER_EMAIL=contact@votre-domaine.com
GRAPH_SENDER_NAME="[Duel By Benribs Lab]"

# Configuration OTP
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6

# Firebase Admin SDK (pour push notifications)
# Pour obtenir ces valeurs:
# 1. Aller sur https://console.firebase.google.com/project/VOTRE_PROJECT/settings/serviceaccounts/adminsdk
# 2. Cliquer "Generate new private key"
# 3. Télécharger le fichier JSON et extraire les valeurs
FIREBASE_PRIVATE_KEY_ID=votre_private_key_id_firebase
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nVOTRE_CLE_PRIVEE_FIREBASE\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@votre-projet.iam.gserviceaccount.com

# ===== LOGS ET MONITORING =====

# Niveau de logs
LOG_LEVEL=info